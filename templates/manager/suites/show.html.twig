{% extends 'base.html.twig' %}

{% block title %}Suites{% endblock %}

{% block body %}
    <h1>Suites</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ suite.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ suite.title }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ suite.cover }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ suite.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ suite.price }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ suite.picture }}</td>
            </tr>
            <tr>
                <th>Is_reserved</th>
                <td>{{ suite.isReserved ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('suites_list') }}">back to list</a>

    <a href="{{ path('suites_list_edit', {'id': suite.id}) }}">edit</a>

