{% extends 'manager/base.html.twig' %}

{% block title %}Etablissement du manager{% endblock %}

{% block body %}
    <h1>Mon établissement</h1>


    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Etablissements
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Ville</th>
                    <th>Adresse</th>
                    <th>Description</th>
                    <th>Accès</th>
                </tr>
                </thead>
                <tbody>
                {% for establishment in establishments %}
                    <tr>

                        <td>{{ establishment.name }}</td>
                        <td>{{ establishment.city }}</td>
                        <td>{{ establishment.address }}</td>
                        <td>{{ establishment.description }}</td>
                        <td>
                            <a href="{{ path('manager_establishments_list_show', {'id': establishment.id}) }}" class="btn btn-outline-info">Détails</a>

                        </td>
                    </tr>
                {% endfor %}


                </tbody>
            </table>
        </div>
    </div>



{% endblock %}