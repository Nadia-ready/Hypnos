{{ form_start(form) }}
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Suites
    </div>
    <div class="card-body">
        {{ form_widget(form) }}
        {# if route is "suites_edit show images #}
        {% if app.request.attributes.get('_route') == 'suites_list_delete' %}

            {% for image in suite.image %}
                <div>
                    <img src="{{ asset('/uploads/'~images.name) }}" alt="" width="150">

                    {# We add a link to delete an image (will be managed in Ajax) #}
                    <a href="{{ path('suites_delete_image', {id: images.id})}}" data-delete data-token="{{ csrf_token('delete' ~ images.id )}}">Supprimer</a>
                </div>
            {% endfor %}
        {% endif %}
         <button class="btn btn-outline-info">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
