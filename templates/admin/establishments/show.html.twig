{% extends 'admin/base.html.twig' %}

{% block title %}Etablissements{% endblock %}

{% block body %}
    <h1>Etablissement</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Détails de l'établissements
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ establishment.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ establishment.name }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ establishment.city }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ establishment.address }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ establishment.description }}</td>
                </tr>
                <tr>
                    <th>Image Principal</th>
                    <td>
                        <img src={{ asset(mainImage) }} alt="{{ mainImage.name }}">
                    </td>
                </tr>
                <tr>
                    <th>Galerie d'images</th>
                    <td>
                        {% for image in images %}
                            <img src={{ asset(image) }} alt="Image">
                        {% endfor %}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="btn-group">
        <div>
            <a href="{{ path('establishments_list') }}" class="btn btn-outline-info">Retour à la liste</a>
        </div>

        <div>
            <a href="{{ path('establishments_list_edit', {'id': establishment.id}) }}" class="btn btn-outline-info">Modifier</a>
        </div>

        {{ include('admin/establishments/_delete_form.html.twig') }}
    </div>




{% endblock %}
