{% extends 'admin/base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Détails de l'établissements
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Lastname</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <a href="{{ path('admin_user_list') }}" class="btn btn-outline-info">Retour à la lsiet</a>

    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-outline-info">Modifier</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
