{% extends 'base.html.twig' %}

{% block title %}Etablissements{% endblock %}

{% block body %}
    <div class="container-fluid text-center" style="padding-top: 50px">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-8">
                    <h1>Etablissement {{ establishment.name }}</h1>
                    <h4>{{ establishment.address }}</h4>
                    <h5>{{ establishment.description }}</h5>
                </div>
            </div>
        </div>
    </div>


    <div class="card-body">
        <table id="datatablesSimple">
            <tbody>
            <tr>
                <th></th>
                <td>
                    {% for image in images %}
                        <img src={{ asset(image) }} alt="Image" width="300rem">
                    {% endfor %}
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="container" style="padding-top: 150px ">
        {{ include('reservations/Ajax.html.twig', {'establishments': [establishment]}) }}
    </div>


{% endblock %}

