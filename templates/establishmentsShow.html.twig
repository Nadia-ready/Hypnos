{% extends 'base.html.twig' %}

{% block title %}Etablissements{% endblock %}

{% block body %}
    <div class="container-fluid text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-8">
                    <h1>Etablissement {{ establishment.name }}</h1>

                    <h2>Nos suites</h2>
                </div>
            </div>
        </div>
    </div>

    {% for suite in establishment.suites %}
        <div class="container-fluid booking pb-5">
            <div class="container">

                <div class="bg-white shadow" style="padding: 35px;">
                    <div class="row g-2">

                        <div class="col-lg-12 col-md-8">

                            <div class="room-item shadow rounded overflow-hidden">

                                <div class="position-relative">
                                    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <img class="w-100" src={{ asset('asset/image/Home/principal.jpg')}} alt="Image">

                                            </div>
                                            <div class="carousel-item">
                                                <img class="w-100" src={{ asset('asset/image/Home/Principal1.jpg')}} alt="Image">

                                            </div>
                                        </div>
                                        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                                                data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                                                data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                    </div>
                                </div>
                                    <div class="p-4 mt-2">
                                        <div class="d-flex justify-content-between mb-3">
                                            <h5 class="mb-0">{{ suite.title }}</h5>
                                                <div class="ps-2">
                                                    <small class="fa fa-star text-primary"></small>
                                                    <small class="fa fa-star text-primary"></small>
                                                    <small class="fa fa-star text-primary"></small>
                                                    <small class="fa fa-star text-primary"></small>
                                                    <small class="fa fa-star text-primary"></small>
                                                </div>
                                        </div>
                                            <div class="d-flex mb-3">
                                                <small class="border-end me-3 pe-3"><i class="fa fa-hotel text-primary me-2"></i>Lit King Size</small>
                                                <small class="border-end me-3 pe-3"><i class="fa fa-spa text-primary me-2"></i>Spa</small>
                                                <small><i class="fa fa-wifi text-primary me-2"></i>Wifi</small>
                                            </div>
                                                <p class="text-body mb-3">{{ suite.description }}</p>
                                                    <div class="d-flex justify-content-end">
                                                        <a class="btn btn-sm btn-primary rounded py-2 px-4" href="{{ path('suites_show', {'id': suite.id}) }}">PLus de détails</a>
                                                        <a class="btn btn-sm btn-dark rounded py-2 px-4" href={{ path('booking', {'id': suite.id}) }}">Réserver</a>
                                                    </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endfor %}






{% endblock %}