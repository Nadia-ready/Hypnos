{% extends 'base.html.twig' %}

{% block title %}Etablissements{% endblock %}

{% block body %}
    <div class="container-fluid text-center" style="padding-top: 50px">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-8">
                    <h1>Etablissement {{ establishment.name }}</h1>
                    <h4>{{ establishment.address }}</h4>
                    <h5>{{ establishment.description }}</h5>
                </div>
            </div>
        </div>
    </div>



    <div class="container-fluid text-center">
        <table>
            <tbody>
            <tr>

                <td>
                    {% for image in images %}
                        <img src={{ asset(image) }} alt="Image" width="300rem">
                    {% endfor %}
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="container" style="padding-top: 150px ">
        {{ include('reservations/Ajax.html.twig', {'establishments': [establishment]}) }}
    </div>

    <h2 class="container-fluid text-center"> Toutes nos suites</h2>
    {% for suite in establishment.suites %}
    <div class="container-xxl py-5">
        <div class="container">

            <div class="row g-4">
                <div class="col-lg-12 col-md-6">
                    <div class="room-item shadow rounded overflow-hidden">
                        <div class="position-relative">
                            <img class="w-100"  src={{ asset(suite.mainImage) }} alt="Image">
                            <small class=" start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">120€/nuit</small>
                        </div>
                        <div class="p-4 mt-2">
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0">{{ suite.title }}</h5>
                                <div class="ps-2">
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                </div>
                            </div>
                            <div class="d-flex mb-3">
                                <small class="border-end me-3 pe-3"><i class="fa fa-hotel text-primary me-2"></i>Disponibles</small>
                                <small class="border-end me-3 pe-3"><i class="fa fa-spa text-primary me-2"></i>Spa</small>
                                <small><i class="fa fa-wifi text-primary me-2"></i>Wifi</small>
                            </div>
                            <p class="text-body mb-3">{{ suite.description }}</p>
                            <div class="d-flex justify-content-between">
                                <a class="btn btn-sm btn-primary rounded py-2 px-4" href="{{ path('suites_show', {'id': suite.id}) }}">Plus de détails</a>
                                <a class="btn btn-sm btn-dark rounded py-2 px-4" href={{ path('reservationsSuites') }}>Réserver maintenant</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% endfor %}




{% endblock %}

