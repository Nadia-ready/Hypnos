{% extends 'base.html.twig' %}

{% block title %}Etablissements{% endblock %}

{% block body %}
    <h1>Etablissement {{ establishment.name }}</h1>
    <h2>Nos suites</h2>

    {% for suite in establishment.suites %}
        <div class="col-lg-12 col-md-6">
            <div class="room-item shadow rounded overflow-hidden">
                <div class="position-relative">
                    <small class="start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">120€/nuit</small>
                </div>
                    <div class="p-4 mt-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h5 class="mb-0">{{ suite.title }}</h5>
                                <div class="ps-2">
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                </div>
                        </div>
                            <div class="d-flex mb-3">
                                <small class="border-end me-3 pe-3"><i class="fa fa-hotel text-primary me-2"></i>Lit King Size</small>
                                <small class="border-end me-3 pe-3"><i class="fa fa-spa text-primary me-2"></i>Spa</small>
                                <small><i class="fa fa-wifi text-primary me-2"></i>Wifi</small>
                            </div>
                                <p class="text-body mb-3">{{ suite.description }}</p>
                                    <div class="d-flex justify-content-end">
                                        <a class="btn btn-sm btn-primary rounded py-2 px-4" href="{{ path('suites_show', {'id': suite.id}) }}">PLus de détails</a>
                                        <a class="btn btn-sm btn-dark rounded py-2 px-4" href={{ path('booking', {'id': suite.id}) }}">Réserver</a>
                    </div>
            </div>
        </div>
    </div>
{% endfor %}

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Détails de l'établissements
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ establishment.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ establishment.name }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ establishment.city }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ establishment.address }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ establishment.description }}</td>
                </tr>

                </tbody>
            </table>
        </div>
    </div>

    <div class="btn-group">
        <div>
            <a href="{{ path('establishments_list') }}" class="btn btn-outline-info">Retour à la liste</a>
        </div>

        <div>
            <a href="{{ path('establishments_list_edit', {'id': establishment.id}) }}" class="btn btn-outline-info">Modifier</a>
        </div>

        {{ include('admin/establishments/_delete_form.html.twig') }}
    </div>




{% endblock %}