{% extends 'base.html.twig' %}

{% block title %} Réserver une suite {% endblock %}

{% block body %}

    <div id="booking" class="section">
        <div class="section-center">
            <div class="container">
                <div class="row">
                    <div class="booking-form">
                        <form>
                            <div class="row no-margin">
                                <div class="col-md-3">
                                    <div class="form-header">
                                        <h2>Book Now</h2>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <div class="row no-margin">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <span class="form-label">Date d'arrivée</span>
                                                <input class="form-control" type="date">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <span class="form-label">Date de départ</span>
                                                <input class="form-control" type="date">
                                            </div>
                                        </div>


                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <span class="form-label">Etablissement</span>
                                                <select class="form-control">
                                                    <option>

                                                    </option>

                                                </select>
                                                <span class="select-arrow"></span>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-btn">
                                        <button class="btn btn-outline-info">Check availability</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{%  endblock %}