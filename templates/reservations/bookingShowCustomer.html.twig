{% extends 'base.html.twig' %}

{% block title %} Mes réservations {% endblock %}

{% block body %}

    <h1>Mes réservations</h1>

          <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Arrival_date</th>
            <th>Departure_date</th>
        </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.arrivalDate ? reservation.arrivalDate|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.departureDate ? reservation.departureDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('reservations_list_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('reservations_list_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}