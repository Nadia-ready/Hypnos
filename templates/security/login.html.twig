{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}

    <form method="post">
        <div class="form-body">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="container h-100">
                <div class="row align-items-center justify-content-center">
                    <div class="card text-white bg-info mb-3" style="width: 18rem;">
                        <div class="card-body">
                            <h1 class="card-title">Connectez-vous</h1>
                            <div class="card-text">
                                <label for="inputEmail">Email</label>
                                <input type="email" value="Saisissez votre mail" name="email" id="inputEmail"  autocomplete="email" required autofocus>
                            </div>
                            <div class="card-text">
                                <label for="inputPassword">Mot de passe</label>
                                <input type="password" value="mot de passe" name="password" id="inputPassword"  autocomplete="current-password" required>

                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                            </div>
                            <button class="btn btn-lg btn-primary" type="submit">
                                Connexion
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}


    </form>
{% endblock %}
